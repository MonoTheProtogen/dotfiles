// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    //"margin-top": 10,
    "margin-left": 10,
    "margin-right": 10,
    "spacing": 5, // Gaps between modules (5px)
    "height": 32,
    // Choose the order of the modules
    
    "modules-left": [
	"group/shortcuts",
        "hyprland/workspaces",
        "hyprland/window",
	"mpris"
    ],
    
    "modules-center": [
        "clock"
    ],
    
    "modules-right": [
	"group/options",
	"group/keyboard",
	"backlight",
	"pulseaudio",
        "tray",
	"battery",
	"group/power"
    ],
    // Modules configuration
    // "sway/workspaces": {
    //     "disable-scroll": true,
    //     "all-outputs": true,
    //     "warp-on-scroll": false,
    //     "format": "{name}: {icon}",
    //     "format-icons": {
    //         "1": "",
    //         "2": "",
    //         "3": "",
    //         "4": "",
    //         "5": "",
    //         "urgent": "",
    //         "focused": "",
    //         "default": ""
    //     }
    // },
    
    "group/keyboard": {
	"orientation": "horizontal",
	"drawer": {
		"transition-duration": 300,
		"children-class": "keyboard",
		"transition-left-to-right": false,
		"click-to-reveal": false
	},
	"modules": [
		"hyprland/language",
		"keyboard-state"
	]
    },
    
    "group/options": {
	"orientation": "horizontal",
	"drawer": {
		"transition-duration": 300,
		"children-class": "options",
		"transition-left-to-right": false,
		"click-to-reveal": false
	},
	"modules": [
		"power-profiles-daemon",
		"idle_inhibitor"
	]
    },

    "group/power": {
	"orientation": "horizontal",
	"drawer": {
		"transition-duration": 300,
		"children-class": "poweropts",
		"transition-left-to-right": false,
		"click-to-reveal": false
	},
	"modules": [
		"custom/shutdown",
		"custom/lock",
		"custom/logout",
		"custom/reboot"
	]
    },

    "group/shortcuts": {
	"orientation": "horizontal",
	"drawer": {
		"transition-duration": 300,
		"children-class": "shortcut",
		"transition-left-to-right": true,
		"click-to-reveal": false
	},
	"modules": [
		"custom/info",
		"custom/terminal",
		"custom/files",
		"custom/textedit",
		"custom/runner",
		"custom/screenshot",
		"custom/picker"
	]
    },

    "custom/shutdown": {
	"format": "",
	"tooltip": true,
	"tooltip-format": "Shutdown",
	"on-click": "hyprshutdown -t 'Shutting Down' --post-cmd 'shutdown -P 0' &"
    },

    "custom/reboot": {
	"format": "",
	"tooltip": true,
	"tooltip-format": "Reboot",
	"on-click": "hyprshutdown -t 'Rebooting' --post-cmd 'reboot' &"
    },

    "custom/logout": {
	"format": "󰗽",
	"tooltip": true,
	"tooltip-format": "Log Out",
	"on-click": "hyprshutdown -t 'Logging Out' &"
    },

    "custom/lock": {
	"format": "󰒲",
	"tooltip": true,
	"tooltip-format": "Suspend",
	"on-click": "systemctl suspend &"
    },

    "custom/info": {
	    "format": "󰣇",
	    "tooltip": true,
	    "tooltip-format": "System Info",
	    "on-click": "systemd-run --user --no-block hyprsysteminfo 7"
    },

    "custom/terminal": {
    	"format": "",
	"tooltip": true,
	"tooltip-format": "Terminal",
	"on-click": "systemd-run --user --no-block kitty &"
    },

    "custom/files": {
	"format": "",
	"tooltip": true,
	"tooltip-format": "File Explorer",
	"on-click": "systemd-run --user --no-block thunar &"
    },

    "custom/textedit": {
	"format": "",
	"tooltip": true,
	"tooltip-format": "Text Editor",
	"on-click": "systemd-run --user --no-block mousepad &"
    },

    "custom/runner": {
	"format": "",
	"tooltip": true,
	"tooltip-format": "Applications",
	"on-click": "systemd-run --user --no-block hyprlauncher &"
    },

    "custom/screenshot": {
	"format": "",
	"tooltip": true,
	"tooltip-format": "Screenshot",
	"on-click": "hyprshot -m region &"
    },

    "custom/picker": {
	"format": "",
	"tooltip": true,
	"tooltip-format": "Color Picker",
	"on-click": "hyprpicker &"
    },

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },
    "hyprland/window": {
	    "format": "{class}",
	    "rewrite": {
		    "^$": " Desktop"
	    },
	    "icon": true,
	    "icon-size": 17
	},
    
    "hyprland/workspaces": {
	//"format": "{icon}",
	//"format-icons": { 
	//	"active": "",
	//	"default": "",
	//	"empty": ""
	//	}
	},
    
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ⸨{songPosition}|{queueLength}⸩ {volume}% ",
        "format-disconnected": "Disconnected ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": " "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\"></span> ",
            "on": " "
        },
        "repeat-icons": {
            "on": " "
        },
        "single-icons": {
            "on": "1 "
        },
        "state-icons": {
            "paused": "",
            "playing": ""
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "󰒳",
            "deactivated": "󰒲"
        },
	"tooltip-format-deactivated": "Caffeine: {status}",
	"tooltip-format-activated": "Caffeine: {status}"
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10,
        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
        "format": "{usage}% ",
        "tooltip": false
    },
    "memory": {
        "format": "{}% "
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", ""]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""],
    	"tooltip-format": "Brightness: {percent}% {icon}"
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        "format-full": "{capacity}% ",
        "format-icons": ["", "", "", "", ""]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "󰾅",
        "performance": "󰓅",
        "balanced": "󰾅",
        "power-saver": "󰾆"
      }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) ",
        "format-ethernet": "{ipaddr}/{cidr} ",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "hyprpwcenter"
    },
    "custom/menu": {
        "format" : " 󰣇 ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/custom-modules/menu.xml", // Menu file in resources folder
		"menu-actions": {
			"appmenu": "systemd-run --user --no-block hyprlauncher",
			"terminal": "systemd-run --user --no-block kitty",
			"fileman": "systemd-run --user --no-block thunar",
			"textedit": "systemd-run --user --no-block mousepad",
			"sysinfo": "systemd-run --user --no-block hyprsysteminfo",
			"screenshot": "hyprshot -m region &",
			"picker": "hyprpicker &",
			"shutdown": "hyprshutdown -t 'Shutting Down' --post-cmd 'shutdown -P 0' &",
			"reboot": "hyprshutdown -t 'Rebooting' --post-cmd 'reboot' &",
			"suspend": "systemctl suspend &",
			"logout": "hyprshutdown &"
		}
    },
    "hyprland/language": {
	    "format": "{short}"
    },
    "mpris": {
	"format": "{status_icon} {dynamic}",
	"dynamic-order": ["title", "artist"],
	"status-icons": {
		"playing": "",
		"paused": "",
		"stopped": ""
	}
    }
}
